@{
    ViewData["Title"] = "Home Page";
}
@Model 
<h1><b>Dojo Survey</b></h1>
    <form action="survey" method="POST">

        <label for="Name">Your Name:</label>
        <input class="u-full-width" type="text" placeholder="John Doe" name="Name"  >

    
        <label for="Locations">Dojo Location:</label>
        <select class="u-full-width" name="Locations">
            <option value="san jose">San Jose, Ca.</option>
            <option value="seattle">Seattle, Wa.</option>
            <option value="Los Angele">Los Angeles, Ca.</option>
            <option value="dallas">Dallas, Tx.</option>
            <option value="Tyson's Corner">Tyson's Corner, Va.</option>
            <option value="chicago">Chicago, Il.</option>
            <option value="tulsa">Tulsa, Ok.</option>
            <option value="berkeley">Berkeley, Ca.</option>
            <option value="boise">Boise, Id.</option>
            <option value="Orange County">Orange County, Ca.</option>
        </select>
    

        <label for="Languages">Favorite Language:</label>
        <select class="u-full-width" name="Languages">
            <option value="java">Java</option>
            <option value="python">Python</option>
            <option value="javascript">JavaScript</option>
            <option value="cplusplus">C++</option>
            <option value="csharp">C#</option>
            <option value="php">PHP</option>
            <option value="perl">Perl</option>
            <option value="swift">Swift</option>
            <option value="r">R</option>
            <option value="rust">Rust</option>
        </select>
        <label for="Comments">Comment (Optional)</label>
            <textarea class="u-full-width" id="Comments" placeholder="What's on you mind?" name="Comments"></textarea>

        <input class="button-primary" type="submit"  value="submit">
    </form>

           
    </div>